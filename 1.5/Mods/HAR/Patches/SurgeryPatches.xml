<Patch>


  <Operation Class="PatchOperationConditional">
    <!--The above is 99.99% certain to match, since the vanilla def will always exist. It is mostly here as an example tbh...-->
    <xpath>Defs/RecipeDef/appliedOnFixedBodyParts[li="Spine"]</xpath>
    <match Class="PatchOperationAdd">
      <xpath>Defs/RecipeDef/appliedOnFixedBodyParts[li="Spine"]</xpath>
      <value>
        <li>BS_SlimeSpine</li>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/RecipeDef/appliedOnFixedBodyParts[li="Stomach"]</xpath>
    <match Class="PatchOperationAdd">
      <xpath>Defs/RecipeDef/appliedOnFixedBodyParts[li="Stomach"]</xpath>
      <value>
        <li>BS_SlimeBigStomach</li>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/RecipeDef/appliedOnFixedBodyParts[li="Torso"]</xpath>
    <match Class="PatchOperationAdd">
      <xpath>Defs/RecipeDef/appliedOnFixedBodyParts[li="Torso"]</xpath>
      <value>
        <li>BS_SlimeBody</li>
      </value>
    </match>
  </Operation>
</Patch>